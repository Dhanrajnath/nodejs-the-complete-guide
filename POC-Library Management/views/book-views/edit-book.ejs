<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if (editing) { %>/book/edit-book<% } else { %>/book/add-book<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= book.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="author">Author</label>
                <input type="text" name="author" id="author" value="<% if (editing) { %><%= book.author %><% } %>">
            </div>
            <div class="form-control">
                <label for="isbn">ISBN</label>
                <input type="text" name="isbn" id="isbn" value="<% if (editing) { %><%= book.isbn %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= book.id %>" name="bookId">
            <% } %>
            <input type="hidden" value="<%= libraryId %>" name="libraryId">

            <button class="btn" type="submit"><% if (editing) { %>Update Book<% } else { %>Add Book<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>